@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "APAGAR DADOS PESSOAIS";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}
<section class="py-1">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <h4>@ViewData["Title"]</h4>
            <div class="alert alert-danger" role="alert">
                <span class="fa fa-trash"></span>
                <strong>A exclusão desses dados removerá permanentemente sua conta, e isso não poderá ser recuperado.</strong>
            </div>
            <div>
                <form id="delete-user" method="post" class="form-group">
                    <div class="row">
                        <div class="col-lg-6 col-md-8 col-sm-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    @if (Model.RequirePassword)
                    {
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" autofocus />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    }
                    <button class="btn btn-danger" type="submit">EXCLUIR DADOS E FECHAR MINHA CONTA</button>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }